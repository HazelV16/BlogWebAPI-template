<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <title>Blog</title>
</head>
<body>
    <header>
        <h1>Hazel's Blog</h1>
        <nav>
            <a href="/new">Add New Post</a>
        </nav>
    </header>
    <div class="container">
        <ul>
            <%posts.forEach(post => {%>
                <li class="blog-post">
                    <div class="post-content">
                        <h2><%= post.title%></h2>
                        <p><%= post.content%></p>
                    </div>
                    <div class="post-actions">
                        <a href="/edit/<%= post._id%>">Edit</a>
                        <form action="/delete/<%= post._id%>?_method=DELETE" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </li>
            <%})%>
        </ul>
    </div>

    <footer>
        &copy; Hazel's blog. All rights reserved.
    </footer>

</body>
</html>
